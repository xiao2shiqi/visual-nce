  "segments": [
    {
      "id": "intro_1",
      "role": "Narrator",
      "text": "Lesson 63",
      "translation": "",
      "startTime": 0.78,
      "endTime": 3.44
    },
    {
      "id": "intro_2",
      "role": "Narrator",
      "text": "Thank you, doctor.",
      "translation": "",
      "startTime": 3.45,
      "endTime": 6.44
    },
    {
      "id": "intro_3",
      "role": "Narrator",
      "text": "Listen to the tape then answer this question.",
      "translation": "",
      "startTime": 6.45,
      "endTime": 12.68
    },
    {
      "id": "intro_4",
      "role": "Narrator",
      "text": "Who else is in bed today? Why?",
      "translation": "",
      "startTime": 12.69,
      "endTime": 19.21
    },
    {
      "id": "s1",
      "role": "Narrator",
      "text": "How's Jimmy today?",
      "translation": "",
      "startTime": 19.22,
      "endTime": 21.57
    },
    {
      "id": "s2",
      "role": "Man",
      "text": "Better.",
      "translation": "",
      "startTime": 21.58,
      "endTime": 22.69
    },
    {
      "id": "s3",
      "role": "Woman",
      "text": "Thank you, doctor.",
      "translation": "",
      "startTime": 22.7,
      "endTime": 25
    },
    {
      "id": "s4",
      "role": "Man",
      "text": "Can I see him please, Mrs. Williams?",
      "translation": "",
      "startTime": 25.01,
      "endTime": 29.27
    },
    {
      "id": "s5",
      "role": "Woman",
      "text": "Certainly, doctor.",
      "translation": "",
      "startTime": 29.28,
      "endTime": 31.34
    },
    {
      "id": "s6",
      "role": "Man",
      "text": "Come upstairs.",
      "translation": "",
      "startTime": 31.35,
      "endTime": 34.16
    },
    {
      "id": "s7",
      "role": "Woman",
      "text": "You look very well, Jimmy.",
      "translation": "",
      "startTime": 34.17,
      "endTime": 37.08
    },
    {
      "id": "s8",
      "role": "Man",
      "text": "You are better now, but you mustn't get up yet.",
      "translation": "",
      "startTime": 37.09,
      "endTime": 42.59
    },
    {
      "id": "s9",
      "role": "Woman",
      "text": "You must stay in bed for another two days.",
      "translation": "",
      "startTime": 42.6,
      "endTime": 48.31
    },
    {
      "id": "s10",
      "role": "Man",
      "text": "The boy mustn't go to school yet, Mrs. Williams.",
      "translation": "",
      "startTime": 48.32,
      "endTime": 53.2
    },
    {
      "id": "s11",
      "role": "Woman",
      "text": "And he mustn't eat rich food.",
      "translation": "",
      "startTime": 53.21,
      "endTime": 58.1
    },
    {
      "id": "s12",
      "role": "Man",
      "text": "Does he have a temperature, doctor?",
      "translation": "",
      "startTime": 58.11,
      "endTime": 62.08
    },
    {
      "id": "s13",
      "role": "Woman",
      "text": "No, he doesn't.",
      "translation": "",
      "startTime": 62.09,
      "endTime": 64.05
    },
    {
      "id": "s14",
      "role": "Man",
      "text": "Must he stay in bed?",
      "translation": "",
      "startTime": 64.06,
      "endTime": 67.05
    },
    {
      "id": "s15",
      "role": "Woman",
      "text": "Yes. He must remain in bed for another two days.",
      "translation": "",
      "startTime": 67.06,
      "endTime": 72.83
    },
    {
      "id": "s16",
      "role": "Man",
      "text": "He can get up for about two hours each day, but you must keep the room warm.",
      "translation": "",
      "startTime": 72.84,
      "endTime": 83.48
    },
    {
      "id": "s17",
      "role": "Woman",
      "text": "Where's Mr. Williams this evening?",
      "translation": "",
      "startTime": 83.49,
      "endTime": 87.34
    },
    {
      "id": "s18",
      "role": "Man",
      "text": "He's in bed, doctor.",
      "translation": "",
      "startTime": 87.35,
      "endTime": 90.47
    },
    {
      "id": "s19",
      "role": "Woman",
      "text": "Can you see him please?",
      "translation": "",
      "startTime": 90.48,
      "endTime": 93.23
    },
    {
      "id": "s20",
      "role": "Man",
      "text": "He has a bad cold, too!",
      "translation": "",
      "startTime": 93.24,
      "endTime": 98.24
    }
  ]
}