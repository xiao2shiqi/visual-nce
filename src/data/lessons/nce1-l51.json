    },
    {
      "id": "intro_2",
      "role": "Narrator",
      "text": "A pleasant climate",
      "translation": "",
      "startTime": 3.13,
      "endTime": 6.17
    },
    {
      "id": "intro_3",
      "role": "Narrator",
      "text": "Listen to the tape then answer this question.",
      "translation": "",
      "startTime": 6.18,
      "endTime": 11.84
    },
    {
      "id": "intro_4",
      "role": "Narrator",
      "text": "Does it ever snow in Greece?",
      "translation": "",
      "startTime": 11.85,
      "endTime": 17
    },
    {
      "id": "s1",
      "role": "Man",
      "text": "Where do you come from?",
      "translation": "",
      "startTime": 17.01,
      "endTime": 19.89
    },
    {
      "id": "s2",
      "role": "Woman",
      "text": "I come from Greece.",
      "translation": "",
      "startTime": 19.9,
      "endTime": 22.93
    },
    {
      "id": "s3",
      "role": "Narrator",
      "text": "What's the climate like in your country?",
      "translation": "",
      "startTime": 22.94,
      "endTime": 27.31
    },
    {
      "id": "s4",
      "role": "Man",
      "text": "It's very pleasant.",
      "translation": "",
      "startTime": 27.32,
      "endTime": 30.36
    },
    {
      "id": "s5",
      "role": "Narrator",
      "text": "What's the weather like in spring?",
      "translation": "",
      "startTime": 30.37,
      "endTime": 34.28
    },
    {
      "id": "s6",
      "role": "Man",
      "text": "It's often windy in March.",
      "translation": "",
      "startTime": 34.29,
      "endTime": 37.78
    },
    {
      "id": "s7",
      "role": "Woman",
      "text": "It's always warm in April and May, but it rains sometimes.",
      "translation": "",
      "startTime": 37.79,
      "endTime": 45.52
    },
    {
      "id": "s8",
      "role": "Narrator",
      "text": "What's it like in summer?",
      "translation": "",
      "startTime": 45.53,
      "endTime": 49.03
    },
    {
      "id": "s9",
      "role": "Man",
      "text": "It's always hot in June, July and August.",
      "translation": "",
      "startTime": 49.04,
      "endTime": 54.69
    },
    {
      "id": "s10",
      "role": "Woman",
      "text": "The sun shines every day.",
      "translation": "",
      "startTime": 54.7,
      "endTime": 58.15
    },
    {
      "id": "s11",
      "role": "Man",
      "text": "Is it cold or warm in autumn?",
      "translation": "",
      "startTime": 58.16,
      "endTime": 62.16
    },
    {
      "id": "s12",
      "role": "Woman",
      "text": "It's always warm in September and October.",
      "translation": "",
      "startTime": 62.17,
      "endTime": 67.1
    },
    {
      "id": "s13",
      "role": "Man",
      "text": "It's often cold in November and it rains sometimes.",
      "translation": "",
      "startTime": 67.11,
      "endTime": 73.5
    },
    {
      "id": "s14",
      "role": "Woman",
      "text": "Is it very cold in winter?",
      "translation": "",
      "startTime": 73.51,
      "endTime": 77.22
    },
    {
      "id": "s15",
      "role": "Man",
      "text": "It's often cold in December, January and February.",
      "translation": "",
      "startTime": 77.23,
      "endTime": 83.33
    },
    {
      "id": "s16",
      "role": "Woman",
      "text": "It snows sometimes.",
      "translation": "",
      "startTime": 83.34,
      "endTime": 88.34
    }
  ]
}