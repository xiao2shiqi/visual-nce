    {
      "id": "intro_2",
      "role": "Narrator",
      "text": "The weekend",
      "translation": "",
      "startTime": 3.32,
      "endTime": 5.43
    },
    {
      "id": "intro_3",
      "role": "Narrator",
      "text": "Listen to the tape then answer this question.",
      "translation": "",
      "startTime": 5.44,
      "endTime": 10.86
    },
    {
      "id": "intro_4",
      "role": "Narrator",
      "text": "What are the Johnsons going to do at the weekend?",
      "translation": "",
      "startTime": 10.87,
      "endTime": 17.78
    },
    {
      "id": "s1",
      "role": "Man",
      "text": "Hello. Were you at the butcher's?",
      "translation": "",
      "startTime": 17.79,
      "endTime": 21.89
    },
    {
      "id": "s2",
      "role": "Woman",
      "text": "Yes, I was.",
      "translation": "",
      "startTime": 21.9,
      "endTime": 23.88
    },
    {
      "id": "s3",
      "role": "Man",
      "text": "Were you at the butcher's, too?",
      "translation": "",
      "startTime": 23.89,
      "endTime": 27.4
    },
    {
      "id": "s4",
      "role": "Woman",
      "text": "No, I wasn't.",
      "translation": "",
      "startTime": 27.41,
      "endTime": 30.52
    },
    {
      "id": "s5",
      "role": "Man",
      "text": "I was at the greengrocer's.",
      "translation": "",
      "startTime": 30.53,
      "endTime": 34.28
    },
    {
      "id": "s6",
      "role": "Narrator",
      "text": "How's Jimmy today?",
      "translation": "",
      "startTime": 34.29,
      "endTime": 37.17
    },
    {
      "id": "s7",
      "role": "Man",
      "text": "He's very well, thank you.",
      "translation": "",
      "startTime": 37.18,
      "endTime": 41.16
    },
    {
      "id": "s8",
      "role": "Woman",
      "text": "Was he absent from school last week?",
      "translation": "",
      "startTime": 41.17,
      "endTime": 45.76
    },
    {
      "id": "s9",
      "role": "Man",
      "text": "Yes, he was.",
      "translation": "",
      "startTime": 45.77,
      "endTime": 48.27
    },
    {
      "id": "s10",
      "role": "Woman",
      "text": "He was absent on Monday, Tuesday, Wednesday and Thursday.",
      "translation": "",
      "startTime": 48.28,
      "endTime": 55.92
    },
    {
      "id": "s11",
      "role": "Narrator",
      "text": "How are you all keeping?",
      "translation": "",
      "startTime": 55.93,
      "endTime": 59.57
    },
    {
      "id": "s12",
      "role": "Man",
      "text": "Very well, thank you.",
      "translation": "",
      "startTime": 59.58,
      "endTime": 62.39
    },
    {
      "id": "s13",
      "role": "Woman",
      "text": "We're going to spend three days in the country!",
      "translation": "",
      "startTime": 62.4,
      "endTime": 67.48
    },
    {
      "id": "s14",
      "role": "Man",
      "text": "We're going to stay at my mother's for the weekend.",
      "translation": "",
      "startTime": 67.49,
      "endTime": 73.42
    },
    {
      "id": "s15",
      "role": "Woman",
      "text": "Friday, Saturday and Sunday in the country!",
      "translation": "",
      "startTime": 73.43,
      "endTime": 78.98
    },
    {
      "id": "s16",
      "role": "Man",
      "text": "Aren't you lucky!",
      "translation": "",
      "startTime": 78.99,
      "endTime": 83.99
    }
  ]
}