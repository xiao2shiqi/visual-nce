      "translation": "",
      "startTime": 3.02,
      "endTime": 6.16
    },
    {
      "id": "intro_3",
      "role": "Narrator",
      "text": "Listen to the tape then answer this question.",
      "translation": "",
      "startTime": 6.17,
      "endTime": 11.9
    },
    {
      "id": "intro_4",
      "role": "Narrator",
      "text": "Why can't Pamela type the letter?",
      "translation": "",
      "startTime": 11.91,
      "endTime": 17.65
    },
    {
      "id": "s1",
      "role": "Man",
      "text": "Can you come here a minute please, Bob?",
      "translation": "",
      "startTime": 17.66,
      "endTime": 21.76
    },
    {
      "id": "s2",
      "role": "Woman",
      "text": "Yes, sir?",
      "translation": "",
      "startTime": 21.77,
      "endTime": 24.02
    },
    {
      "id": "s3",
      "role": "Man",
      "text": "Where's Pamela?",
      "translation": "",
      "startTime": 24.03,
      "endTime": 26.19
    },
    {
      "id": "s4",
      "role": "Woman",
      "text": "She's next door.",
      "translation": "",
      "startTime": 26.2,
      "endTime": 28.23
    },
    {
      "id": "s5",
      "role": "Man",
      "text": "She's in her office, sir.",
      "translation": "",
      "startTime": 28.24,
      "endTime": 31.47
    },
    {
      "id": "s6",
      "role": "Woman",
      "text": "Can she type this letter for me?",
      "translation": "",
      "startTime": 31.48,
      "endTime": 35.18
    },
    {
      "id": "s7",
      "role": "Man",
      "text": "Ask her please.",
      "translation": "",
      "startTime": 35.19,
      "endTime": 36.91
    },
    {
      "id": "s8",
      "role": "Woman",
      "text": "Yes, sir.",
      "translation": "",
      "startTime": 36.92,
      "endTime": 39.3
    },
    {
      "id": "s9",
      "role": "Man",
      "text": "Can you type this letter for the boss please, Pamela?",
      "translation": "",
      "startTime": 39.31,
      "endTime": 44.14
    },
    {
      "id": "s10",
      "role": "Woman",
      "text": "Yes, of course I can.",
      "translation": "",
      "startTime": 44.15,
      "endTime": 47.74
    },
    {
      "id": "s11",
      "role": "Man",
      "text": "Here you are.",
      "translation": "",
      "startTime": 47.75,
      "endTime": 49.35
    },
    {
      "id": "s12",
      "role": "Woman",
      "text": "Thank you, Bob.",
      "translation": "",
      "startTime": 49.36,
      "endTime": 51.87
    },
    {
      "id": "s13",
      "role": "Man",
      "text": "Bob!",
      "translation": "",
      "startTime": 51.88,
      "endTime": 52.72
    },
    {
      "id": "s14",
      "role": "Woman",
      "text": "Yes?",
      "translation": "",
      "startTime": 52.73,
      "endTime": 53.93
    },
    {
      "id": "s15",
      "role": "Narrator",
      "text": "What's the matter?",
      "translation": "",
      "startTime": 53.94,
      "endTime": 56.1
    },
    {
      "id": "s16",
      "role": "Man",
      "text": "I can't type this letter.",
      "translation": "",
      "startTime": 56.11,
      "endTime": 59.29
    },
    {
      "id": "s17",
      "role": "Woman",
      "text": "I can't read it!",
      "translation": "",
      "startTime": 59.3,
      "endTime": 61.58
    },
    {
      "id": "s18",
      "role": "Man",
      "text": "The boss's handwriting is terrible!",
      "translation": "",
      "startTime": 61.59,
      "endTime": 66.59
    }
  ]
