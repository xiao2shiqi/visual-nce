    {
      "id": "intro_2",
      "role": "Narrator",
      "text": "It's too small.",
      "translation": "",
      "startTime": 4.06,
      "endTime": 7.32
    },
    {
      "id": "intro_3",
      "role": "Narrator",
      "text": "Listen to the tape then answer this question.",
      "translation": "",
      "startTime": 7.33,
      "endTime": 13.34
    },
    {
      "id": "intro_4",
      "role": "Narrator",
      "text": "What kind of dress does the Lady want?",
      "translation": "",
      "startTime": 13.35,
      "endTime": 19.26
    },
    {
      "id": "s1",
      "role": "Man",
      "text": "Do you like this dress, madam?",
      "translation": "",
      "startTime": 19.27,
      "endTime": 23.42
    },
    {
      "id": "s2",
      "role": "Woman",
      "text": "I like the colour very much.",
      "translation": "",
      "startTime": 23.43,
      "endTime": 27.06
    },
    {
      "id": "s3",
      "role": "Man",
      "text": "It's a lovely dress, but it's too small for me.",
      "translation": "",
      "startTime": 27.07,
      "endTime": 33.32
    },
    {
      "id": "s4",
      "role": "Narrator",
      "text": "What about this one?",
      "translation": "",
      "startTime": 33.33,
      "endTime": 35.77
    },
    {
      "id": "s5",
      "role": "Man",
      "text": "It's a lovely dress.",
      "translation": "",
      "startTime": 35.78,
      "endTime": 38.39
    },
    {
      "id": "s6",
      "role": "Woman",
      "text": "It's very smart.",
      "translation": "",
      "startTime": 38.4,
      "endTime": 40.97
    },
    {
      "id": "s7",
      "role": "Man",
      "text": "Short skirts are in fashion now.",
      "translation": "",
      "startTime": 40.98,
      "endTime": 44.67
    },
    {
      "id": "s8",
      "role": "Woman",
      "text": "Would you like to try it?",
      "translation": "",
      "startTime": 44.68,
      "endTime": 47.66
    },
    {
      "id": "s9",
      "role": "Man",
      "text": "All right.",
      "translation": "",
      "startTime": 47.67,
      "endTime": 49.81
    },
    {
      "id": "s10",
      "role": "Woman",
      "text": "I'm afraid this green dress is too small for me as well.",
      "translation": "",
      "startTime": 49.82,
      "endTime": 57.9
    },
    {
      "id": "s11",
      "role": "Man",
      "text": "It's smaller than the blue one.",
      "translation": "",
      "startTime": 57.91,
      "endTime": 62.58
    },
    {
      "id": "s12",
      "role": "Woman",
      "text": "I don't like the colour either.",
      "translation": "",
      "startTime": 62.59,
      "endTime": 66.21
    },
    {
      "id": "s13",
      "role": "Man",
      "text": "It doesn't suit me at all.",
      "translation": "",
      "startTime": 66.22,
      "endTime": 70.02
    },
    {
      "id": "s14",
      "role": "Woman",
      "text": "I think the blue dress is prettier.",
      "translation": "",
      "startTime": 70.03,
      "endTime": 74.76
    },
    {
      "id": "s15",
      "role": "Man",
      "text": "Could you show me another blue dress?",
      "translation": "",
      "startTime": 74.77,
      "endTime": 79.36
    },
    {
      "id": "s16",
      "role": "Woman",
      "text": "I want a dress like that one, but it must be my size.",
      "translation": "",
      "startTime": 79.37,
      "endTime": 87.33
    },
    {
      "id": "s17",
      "role": "Man",
      "text": "I'm afraid I haven't got a larger dress.",
      "translation": "",
      "startTime": 87.34,
      "endTime": 92.56
    },
    {
      "id": "s18",
      "role": "Woman",
      "text": "This is the largest dress in the shop.",
      "translation": "",
      "startTime": 92.57,
      "endTime": 97.57
    }
  ]
}