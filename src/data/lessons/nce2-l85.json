    },
    {
      "id": "intro_2",
      "role": "Narrator",
      "text": "I have just received a letter from my old school, informing me that my former headmaster, Mr. Stuart Page, will be retiring next week.",
      "translation": "",
      "startTime": 14.97,
      "endTime": 27.94,
      "analysis": {
        "words": [
          {
