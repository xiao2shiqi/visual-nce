  "segments": [
    {
      "id": "intro_1",
      "role": "Narrator",
      "text": "Lesson 55",
      "translation": "",
      "startTime": 0.37,
      "endTime": 2.46,
      "analysis": {
        "words": [
          {
            "word": "Lesson",
