{
  "id": "nce2-l10",
  "title": "Lesson 10: Not for Jazz",
  "audio": "/audio/nce2/10ÔºçNot for Jazz.mp3",
  "image": "/images/coming-soon.png",
  "segments": [
    {
      "id": "intro_1",
      "role": "Narrator",
      "text": "What happened to the clavichord?",
      "translation": "",
      "startTime": 8.89,
      "endTime": 12.56
    },
    {
      "id": "intro_2",
      "role": "Narrator",
      "text": "We have an old musical instrument.",
      "translation": "",
      "startTime": 12.57,
      "endTime": 16.09
    },
    {
      "id": "intro_3",
      "role": "Narrator",
      "text": "It is called a clavichord.",
      "translation": "",
      "startTime": 16.1,
      "endTime": 18.9
    },
    {
      "id": "intro_4",
      "role": "Narrator",
      "text": "It was made in Germany in 1681.",
      "translation": "",
      "startTime": 18.91,
      "endTime": 23.77
    },
    {
      "id": "s1",
      "role": "Man",
      "text": "Our clavichord is kept in the living room.",
      "translation": "",
      "startTime": 23.78,
      "endTime": 27.3
    },
    {
      "id": "s2",
      "role": "Woman",
      "text": "It has belonged to our family for a long time.",
      "translation": "",
      "startTime": 27.31,
      "endTime": 31.6
    },
    {
      "id": "s3",
      "role": "Man",
      "text": "The instrument was bought by my grandfather many years ago.",
      "translation": "",
      "startTime": 31.61,
      "endTime": 36.41
    },
    {
      "id": "s4",
      "role": "Woman",
      "text": "Recently it was damaged by a visitor.",
      "translation": "",
      "startTime": 36.42,
      "endTime": 39.86
    },
    {
      "id": "s5",
      "role": "Man",
      "text": "She tried to play jazz on it!",
      "translation": "",
      "startTime": 39.87,
      "endTime": 42.87
    },
    {
      "id": "s6",
      "role": "Woman",
      "text": "She struck the keys too hard and two of the strings were broken.",
      "translation": "",
      "startTime": 42.88,
      "endTime": 48.42
    },
    {
      "id": "s7",
      "role": "Man",
      "text": "My father was shocked.",
      "translation": "",
      "startTime": 48.43,
      "endTime": 51.31
    },
    {
      "id": "s8",
      "role": "Woman",
      "text": "Now we are not allowed to touch it.",
      "translation": "",
      "startTime": 51.32,
      "endTime": 54.35
    },
    {
      "id": "s9",
      "role": "Man",
      "text": "It is being repaired by a friend of my father's.",
      "translation": "",
      "startTime": 54.36,
      "endTime": 59.36
    }
  ]
}