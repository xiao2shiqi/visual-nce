        "words": [
          {
            "word": "Is",
            "pos": "v.",
            "meaning": "是"
          }
        ]
      }
    },
    {
      "id": "s23",
      "role": "Woman",
      "text": "which can be used equally for good or evil.",
      "translation": "",
      "startTime": 122.97,
      "endTime": 126.87,
      "analysis": {
