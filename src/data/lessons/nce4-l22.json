    {
      "id": "intro_2",
      "role": "Narrator",
      "text": "Knowledge and progress",
      "translation": "",
      "startTime": 2.1,
      "endTime": 8.92
    },
    {
      "id": "intro_3",
      "role": "Narrator",
      "text": "In what two areas have people made no 'progress' at all?",
      "translation": "",
      "startTime": 8.93,
      "endTime": 15.86,
      "analysis": {
        "grammar": [
          {
            "text": "what",
            "label": "疑问词"
          }
