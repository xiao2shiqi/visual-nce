    {
      "id": "intro_1",
      "role": "Narrator",
      "text": "How was the drunk removed from the ring?",
      "translation": "",
      "startTime": 10.54,
      "endTime": 15.51,
      "analysis": {
        "words": [
          {
            "word": "How",
