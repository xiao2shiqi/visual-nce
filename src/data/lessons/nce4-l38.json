    },
    {
      "id": "intro_3",
      "role": "Narrator",
      "text": "What does this text describe?",
      "translation": "",
      "startTime": 9.59,
      "endTime": 13.49,
      "analysis": {
        "words": [
          {
            "word": "What",
            "pos": "pron.",
