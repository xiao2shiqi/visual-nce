    },
    {
      "id": "s4",
      "role": "Woman",
      "text": "I am even less lucky.",
      "translation": "",
      "startTime": 37.33,
      "endTime": 40.23,
      "analysis": {
        "words": []
      }
    },
    {
      "id": "s5",
      "role": "Man",
      "text": "I never catch anything  --  not even old boots.",
      "translation": "",
      "startTime": 40.24,
      "endTime": 46.47,
      "analysis": {
        "words": [
          {
            "word": "Not",
