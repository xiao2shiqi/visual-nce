    },
    {
      "id": "s5",
      "role": "Man",
      "text": "Anyone who has played even in a school football match knows this.",
      "translation": "",
      "startTime": 79.34,
      "endTime": 83.61,
      "analysis": {
        "grammar": [
          {
            "text": "this",
            "label": "指示代词"
          }
