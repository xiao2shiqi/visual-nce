    },
    {
      "id": "intro_3",
      "role": "Narrator",
      "text": "How does the writer describe sport at the international level?",
      "translation": "",
      "startTime": 7.64,
      "endTime": 14.08,
      "analysis": {
        "grammar": [],
        "words": [
          {
