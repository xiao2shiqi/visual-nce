        ],
        "words": [
          {
            "word": "It",
            "pos": "pron.",
            "meaning": "它"
          },
          {
            "word": "Is",
            "pos": "v.",
            "meaning": "是"
          }
        ]
      }
    },
    {
      "id": "s7",
      "role": "Man",
      "text": "Meanwhile, a microphone, which was lowered into the mine two hours ago,",
      "translation": "",
      "startTime": 68.62,
      "endTime": 75.17
    },
    {
      "id": "s8",
      "role": "Woman",
      "text": "has enabled the men to keep in touch with their closest relatives.",
      "translation": "",
      "startTime": 75.18,
      "endTime": 80.73,
      "analysis": {
        "grammar": [
          {
            "text": "their",
            "label": "形容词性物主代词"
          }
        ],
        "words": []
      }
    },
    {
