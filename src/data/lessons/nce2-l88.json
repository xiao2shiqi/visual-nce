      "id": "intro_1",
      "role": "Narrator",
      "text": "Why is the rescue taking so long?",
      "translation": "",
      "startTime": 10.1,
      "endTime": 15.17,
      "analysis": {
        "grammar": [
          {
            "text": "is",
            "label": "谓语/系动词"
