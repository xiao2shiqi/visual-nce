    {
      "id": "intro_2",
      "role": "Narrator",
      "text": "Hurry up!",
      "translation": "",
      "startTime": 3.16,
      "endTime": 5.7
    },
    {
      "id": "intro_3",
      "role": "Narrator",
      "text": "Listen to the tape then answer this question.",
      "translation": "",
      "startTime": 5.71,
      "endTime": 11.32
    },
    {
      "id": "intro_4",
      "role": "Narrator",
      "text": "How do you know Sam doesn't make the tea very often?",
      "translation": "",
      "startTime": 11.33,
      "endTime": 18.2
    },
    {
      "id": "s1",
      "role": "Man",
      "text": "Can you make the tea, Sam?",
      "translation": "",
      "startTime": 18.21,
      "endTime": 22.13
    },
    {
      "id": "s2",
      "role": "Woman",
      "text": "Yes, of course I can, Penny.",
      "translation": "",
      "startTime": 22.14,
      "endTime": 27.29
    },
    {
      "id": "s3",
      "role": "Man",
      "text": "Is there any water in this kettle?",
      "translation": "",
      "startTime": 27.3,
      "endTime": 31
    },
    {
      "id": "s4",
      "role": "Woman",
      "text": "Yes, there is.",
      "translation": "",
      "startTime": 31.01,
      "endTime": 33.6
    },
    {
      "id": "s5",
      "role": "Man",
      "text": "Where's the tea?",
      "translation": "",
      "startTime": 33.61,
      "endTime": 35.38
    },
    {
      "id": "s6",
      "role": "Woman",
      "text": "It's over there, behind the teapot.",
      "translation": "",
      "startTime": 35.39,
      "endTime": 40.98
    },
    {
      "id": "s7",
      "role": "Man",
      "text": "Can you see it?",
      "translation": "",
      "startTime": 40.99,
      "endTime": 43.55
    },
    {
      "id": "s8",
      "role": "Woman",
      "text": "I can see the teapot, but I can't see the tea.",
      "translation": "",
      "startTime": 43.56,
      "endTime": 49.72
    },
    {
      "id": "s9",
      "role": "Man",
      "text": "There it is!",
      "translation": "",
      "startTime": 49.73,
      "endTime": 51.34
    },
    {
      "id": "s10",
      "role": "Woman",
      "text": "It's in front of you!",
      "translation": "",
      "startTime": 51.35,
      "endTime": 53.55
    },
    {
      "id": "s11",
      "role": "Man",
      "text": "Ah yes, I can see it now.",
      "translation": "",
      "startTime": 53.56,
      "endTime": 58.78
    },
    {
      "id": "s12",
      "role": "Woman",
      "text": "Where are the cups?",
      "translation": "",
      "startTime": 58.79,
      "endTime": 61.22
    },
    {
      "id": "s13",
      "role": "Man",
      "text": "There are some in the cupboard.",
      "translation": "",
      "startTime": 61.23,
      "endTime": 64.09
    },
    {
      "id": "s14",
      "role": "Woman",
      "text": "Can you find them?",
      "translation": "",
      "startTime": 64.1,
      "endTime": 66.21
    },
    {
      "id": "s15",
      "role": "Man",
      "text": "Yes. Here they are.",
      "translation": "",
      "startTime": 66.22,
      "endTime": 69.12
    },
    {
      "id": "s16",
      "role": "Woman",
      "text": "Hurry up, Sam!",
      "translation": "",
      "startTime": 69.13,
      "endTime": 71
    },
    {
      "id": "s17",
      "role": "Man",
      "text": "The kettle's boiling!",
      "translation": "",
      "startTime": 71.01,
      "endTime": 76.01
    }
  ]
}