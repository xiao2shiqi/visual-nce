  "segments": [
    {
      "id": "intro_1",
      "role": "Narrator",
      "text": "Why did Mr. Gilbert telephone Dr. Millington?",
      "translation": "",
      "startTime": 10.49,
      "endTime": 16.41,
      "analysis": {
        "grammar": [
          {
            "text": "did",
            "label": "助动词"
          }
        ],
        "words": []
      }
    },
    {
      "id": "intro_2",
      "role": "Narrator",
      "text": "While John Gilbert was in hospital,",
      "translation": "",
      "startTime": 16.42,
      "endTime": 19.71
    },
    {
      "id": "intro_3",
      "role": "Narrator",
      "text": "he asked his doctor to tell him",
      "translation": "",
      "startTime": 19.72,
      "endTime": 22.54,
      "analysis": {
        "grammar": [
          {
            "text": "his",
            "label": "形容词性物主代词"
          }
        ],
        "words": []
      }
    },
    {
      "id": "intro_4",
      "role": "Narrator",
      "text": "whether his operation had been successful,",
      "translation": "",
      "startTime": 22.55,
      "endTime": 26.15,
      "analysis": {
        "grammar": [
          {
            "text": "his",
            "label": "形容词性物主代词"
          }
        ],
        "words": []
      }
    },
    {
      "id": "s1",
      "role": "Man",
      "text": "but the doctor refused to do so.",
      "translation": "",
      "startTime": 26.16,
      "endTime": 30.05,
      "analysis": {
        "grammar": [
          {
            "text": "do",
            "label": "助动词"
          }
        ],
        "words": []
      }
    },
    {
      "id": "s2",
      "role": "Woman",
      "text": "The following day,",
      "translation": "",
      "startTime": 30.06,
      "endTime": 31.88
    },
    {
      "id": "s3",
      "role": "Man",
      "text": "the patient asked for a bedside telephone.",
      "translation": "",
      "startTime": 31.89,
      "endTime": 35.84
    },
    {
      "id": "s4",
      "role": "Woman",
      "text": "When he was alone,",
      "translation": "",
      "startTime": 35.85,
      "endTime": 37.86
    },
    {
      "id": "s5",
      "role": "Man",
      "text": "he telephoned the hospital exchange",
      "translation": "",
      "startTime": 37.87,
      "endTime": 40.81
    },
    {
      "id": "s6",
      "role": "Woman",
      "text": "and asked for Doctor Millington.",
      "translation": "",
      "startTime": 40.82,
      "endTime": 44.41
    },
    {
      "id": "s7",
      "role": "Man",
      "text": "When the doctor answered the phone,",
      "translation": "",
      "startTime": 44.42,
      "endTime": 47.04
    },
    {
      "id": "s8",
      "role": "Woman",
      "text": "Mr. Gilbert said he was inquiring about a certain patient,",
      "translation": "",
      "startTime": 47.05,
      "endTime": 52.7
    },
    {
      "id": "s9",
      "role": "Man",
      "text": "a Mr. John Gilbert.",
      "translation": "",
      "startTime": 52.71,
      "endTime": 55.4
    },
    {
      "id": "s10",
      "role": "Woman",
      "text": "He asked if Mr. Gilbert's operation had been successful",
      "translation": "",
      "startTime": 55.41,
      "endTime": 60.48
    },
    {
      "id": "s11",
      "role": "Man",
      "text": "and the doctor told him that it had been.",
      "translation": "",
      "startTime": 60.49,
      "endTime": 64.87,
      "analysis": {
        "grammar": [
          {
            "text": "that",
            "label": "指示代词"
          },
          {
            "text": "it",
            "label": "人称代词/主语"
          }
        ],
        "words": [
          {
            "word": "That",
            "pos": "pron.",
            "meaning": "那个"
          },
          {
            "word": "It",
            "pos": "pron.",
            "meaning": "它"
          }
        ]
      }
    },
    {
      "id": "s12",
      "role": "Woman",
      "text": "He then asked when Mr. Gilbert would be allowed to",
      "translation": "",
      "startTime": 64.88,
      "endTime": 68.73
    },
    {
      "id": "s13",
      "role": "Man",
      "text": "go home and the doctor told him",
      "translation": "",
      "startTime": 68.74,
      "endTime": 71.66
    },
    {
      "id": "s14",
      "role": "Woman",
      "text": "that he would have to stay",
      "translation": "",
      "startTime": 71.67,
      "endTime": 73.06,
      "analysis": {
        "grammar": [
          {
            "text": "that",
            "label": "指示代词"
          }
        ],
        "words": [
          {
            "word": "That",
            "pos": "pron.",
            "meaning": "那个"
          }
        ]
      }
    },
    {
      "id": "s15",
      "role": "Man",
      "text": "in hosptial for another two weeks.",
      "translation": "",
      "startTime": 73.07,
      "endTime": 76.94
    },
    {
      "id": "s16",
      "role": "Woman",
      "text": "Then Dr. Millington asked the caller",
      "translation": "",
      "startTime": 76.95,
      "endTime": 80.48
    },
    {
      "id": "s17",
      "role": "Man",
      "text": "if he was a relative of the patient.",
      "translation": "",
      "startTime": 80.49,
      "endTime": 83.59
    },
    {
      "id": "s18",
      "role": "Woman",
      "text": "'No,' the patient answered,",
      "translation": "",
      "startTime": 83.6,
      "endTime": 86.56
    },
    {
      "id": "s19",
      "role": "Man",
      "text": "'I am Mr. John Gilbert.'",
      "translation": "",
      "startTime": 86.57,
      "endTime": 91.57,
      "analysis": {
        "grammar": [
          {
            "text": "am",
            "label": "谓语/系动词"
          }
        ],
        "words": []
      }
    }
  ]
}